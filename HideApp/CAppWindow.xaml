<Window x:Class="HideApp.CAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAppWindow" Height="170" Width="500" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
    		<RowDefinition Height="1*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="20*"/>
    		<ColumnDefinition Width="109*"/>
    	</Grid.ColumnDefinitions>
        <Label>Name</Label>
		<TextBox x:Name="tbxName" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0"></TextBox>

		<Label Grid.Row="1">Path</Label>
		<TextBox x:Name="tbxPath" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0" HorizontalAlignment="Left" Width="343.659"></TextBox>
        <Button Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0" HorizontalAlignment="Right" Click="BrowserButton_Click">Browser</Button>
        
		<Label Grid.Row="2">Args</Label>
		<TextBox x:Name="tbxArgs" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0"></TextBox>

        <Button Grid.Row="3" HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Top" Width="90" Click="SaveButton_Click">Save</Button>
	</Grid>
</Window>
